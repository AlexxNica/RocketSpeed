# create a library for all classes needed for copilot
cpp_library(
    name = 'copilot_library',
    srcs = [
        'copilot.cc',
        'options.cc',
        'worker.cc',
    ],
    preprocessor_flags = [
    	'-Irocketspeed/github/include',
    	'-Irocketspeed/github',
    	'-DROCKETSPEED_PLATFORM_POSIX=1',
    	'-DOS_LINUX=1',
    	'-DGFLAGS=google',
    ],
    deps = [
        '@/rocketspeed/github/src/port',
        '@/rocketspeed/github/src/rollcall',
        '@/rocketspeed/github/src/util',
        '@/rocketspeed/github/src/util/common',
        '@/rocketspeed/github/src/messages',
    ],
)

