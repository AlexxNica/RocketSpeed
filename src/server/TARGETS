# create the rocketspeed binary
cpp_library(
  name = 'rocketspeed_library',
  srcs = [
    'server.cc',
  ],
  preprocessor_flags = [
    '-Irocketspeed/github/include',
    '-Irocketspeed/github',
    '-DROCKETSPEED_PLATFORM_POSIX=1',
    '-DOS_LINUX=1',
    '-DGFLAGS=google',
  ],
  deps = [
    '@/external/gflags',
    '@/rocketspeed/github/src/pilot:pilot_library',
    '@/rocketspeed/github/src/copilot:copilot_library',
    '@/rocketspeed/github/src/controltower:control_tower_library',
    '@/rocketspeed/github/src/supervisor:supervisor_library',
    '@/rocketspeed/github/src/port',
    '@/rocketspeed/github/src/util',
    '@/rocketspeed/github/src/util/common',
    '@/rocketspeed/github/src/messages',
  ],
)

cpp_library(
  name = 'logdevice_setup',
  srcs = [
    'logdevice.cc',
  ],
  preprocessor_flags = [
    '-Irocketspeed/github/include',
    '-Irocketspeed/github',
    '-DROCKETSPEED_PLATFORM_POSIX=1',
    '-DOS_LINUX=1',
    '-DUSE_LOGDEVICE',
    '-DGFLAGS=google',
  ],
  deps = [
    '@/rocketspeed/github/src/logdevice:logdevice_storage',
  ],
)

cpp_binary(
  name = 'rocketspeed',
  srcs = [
    'main.cc',
  ],
  preprocessor_flags = [
    '-Irocketspeed/github',
    '-DROCKETSPEED_PLATFORM_POSIX=1',
    '-DOS_LINUX=1',
    '-DGFLAGS=google',
  ],
  deps = [
    ':rocketspeed_library',
    ':logdevice_setup',
  ],
)
